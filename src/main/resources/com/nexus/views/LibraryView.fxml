<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.nexus.controller.LibraryController"
           styleClass="content-view">

    <VBox fx:id="rootContainer">
        <!-- Top Header/Toolbar -->
        <HBox styleClass="view-header" alignment="CENTER_LEFT" spacing="16">
            <padding><Insets top="0" right="32" bottom="0" left="32"/></padding>

            <HBox alignment="CENTER_LEFT" spacing="16" HBox.hgrow="ALWAYS">
                <FontIcon iconLiteral="mdi2g-gamepad-variant" iconSize="20" styleClass="view-header-icon"/>
                <Label text="Library" styleClass="view-title"/>
                <Label fx:id="gameCountLabel" text="0 GAMES" styleClass="game-count-badge"/>

                <!-- Subtle scan status indicator (non-blocking) -->
                <HBox fx:id="scanStatusContainer" alignment="CENTER_LEFT" spacing="8" visible="false" managed="false">
                    <ProgressIndicator fx:id="scanProgressIndicator" prefWidth="16" prefHeight="16"/>
                    <Label fx:id="scanStatusLabel" text="Checking for new games..." styleClass="scan-status-label"/>
                </HBox>
            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="12">
                <!-- Search Field -->
                <HBox styleClass="search-container" alignment="CENTER_LEFT">
                    <FontIcon iconLiteral="fas-search" iconSize="16" styleClass="search-icon"/>
                    <TextField fx:id="searchField"
                               promptText="Filter games..."
                               styleClass="search-field"/>
                </HBox>

                <!-- Scan Button (toggles between Scan/Cancel) -->
                <Button fx:id="scanButton"
                        text="Scan"
                        styleClass="secondary-button"
                        onAction="#onScanButtonClick">
                    <graphic>
                        <FontIcon fx:id="scanButtonIcon" iconLiteral="fas-sync-alt" iconSize="14" styleClass="button-icon"/>
                    </graphic>
                </Button>

                <!-- Add Game Button -->
                <Button fx:id="addGameButton"
                        text="Add Game"
                        styleClass="primary-button"
                        onAction="#openAddGameDialog">
                    <graphic>
                        <FontIcon iconLiteral="fas-plus" iconSize="14" styleClass="button-icon"/>
                    </graphic>
                </Button>
            </HBox>
        </HBox>

        <!-- Scrollable Games Grid -->
        <ScrollPane styleClass="games-scroll-pane" fitToWidth="true" VBox.vgrow="ALWAYS">
            <VBox alignment="TOP_CENTER" styleClass="games-grid-container">
                <FlowPane fx:id="gamesGrid"
                          styleClass="games-grid"
                          hgap="24"
                          vgap="24"
                          alignment="CENTER">
                    <padding><Insets top="32" right="32" bottom="32" left="32"/></padding>
                </FlowPane>
            </VBox>
        </ScrollPane>
    </VBox>

</StackPane>

